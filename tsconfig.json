{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "es2017",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "lib": ["es7", "es2017", "dom"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./dist/**/*"],
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true
}
